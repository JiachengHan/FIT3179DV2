{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "data/forest/forest-area-primary-planted_area.csv" },
    "width": "container",
    "height": "container",
    "title": {"text":"Forest Area by Type","fontSize":20},
    "params": [{
        "name": "Region_selection",
        "bind": {
            "input": "select",
            "options": [

                null,
                "Northern America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
            ],
            "labels": [
                "Show All",
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
            ],
            "name": "Region: "
        }
    }],
    "transform": [{ "filter": "Region_selection == null || datum.Entity == Region_selection" }],
    "encoding": {
        "x": {
            "timeUnit": "year",
            "field": "Year",
            "axis": { "domain": false, "format": "%Y","grid":false},
            "title": "Year"
        }
    },
    "layer": [{
            "mark": { "type": "area" },
            "encoding": {
                "x": {
                    "timeUnit": "year",
                    "field": "Year",
                    "axis": { "domain": false, "format": "%Y" },
                    "title": "Year"
                },
                "y": {
                    "aggregate": "sum",
                    "field": "hectaras",
                    "type": "quantitative",
                    "axis": null
                },
                "color": {
                    "field": "Type",
                    "type": "nominal",
                    "scale":{
                        "domain":["Naturally_regenerated_forest","Planted_Forest","Primary_Forest"],
                        "range":["lightblue","yellow","red"]
                    },
                    "legend": {
                        "direction":"horizontal",
                        "offset":0,
                        "orient":"top",
                        "title":null,
                        "labelExpr": "{'Naturally_regenerated_forest': 'Naturally Regenerated Forest', 'Planted_Forest': 'Planted Forest', 'Primary_Forest': 'Primary Forest'}[datum.label]"
                    }
                }
            }
        },
        {
            "transform": [{ "pivot": "Type", "value": "hectaras", "groupby": ["Year"] }],
            "mark": "rule",
            "params": [{
                "name": "line_select",
                "select": {
                    "type": "point",
                    "fields": ["Year"],
                    "nearest": true,
                    "on": "mouseover",
                    "clear": "mouseout"
                }
            }],
            "encoding": {
                "opacity": {
                    "condition": { "value": 0.3, "param": "line_select", "empty": false },
                    "value": 0
                },
                "tooltip": [
                    { "field": "Year", "timeUnit": "year", "type": "ordinal", "title": "Year" },
                    { "field": "Naturally_regenerated_forest", "type": "quantitative", "format": ",", "title": "Naturally Regenerated Forest(Hectares)" },
                    { "field": "Planted_Forest", "type": "quantitative", "format": ",", "title": "Planted Forest(Hectares)" },
                    { "field": "Primary_Forest", "type": "quantitative", "format": ",", "title": "Primary Forest(Hectares)" }
                ]
            }
        }
    ],
    "config": {
        "style": { "cell": { "stroke": "transparent" } }
    }

}
