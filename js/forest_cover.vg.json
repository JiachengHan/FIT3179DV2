{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": { "text": "Land Coverd by Forest", "fontSize": 20 },
    "params": [{
        "name": "Year_selection",
        "value": 1990,
        "bind": {
            "input": "range",
            "min": 1990,
            "max": 2020,
            "step": 1,
            "name": "Year: "
        }
    }],
    "projection": {
        "type": "equirectangular"
    },
    "config": {
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    },
    "layer": [{
            "data": {
                "url": "https://raw.githubusercontent.com/JiachengHan/FIT3179DV2/main/js/world.json",
                "format": { "type": "topojson", "feature": "world" }
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.name",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/JiachengHan/FIT3179DV2/main/data/forest/forest-area-as-share-of-land-area_map.csv"
            },
            "transform": [{
                    "lookup": "Code",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/JiachengHan/FIT3179DV2/main/js/world.json",
                            "format": {
                                "type": "topojson",
                                "feature": "world"
                            }
                        },
                        "key": "properties.brk_a3"
                    },
                    "as": "geo"
                },
                { "filter": "datum.Year == Year_selection" }
            ],
            "params": [{
                    "name": "Chooseone",
                    "select": {
                        "type": "point",
                        "fields": ["Entity"],
                        "on": "mouseover",
                        "clear": "mouseout"
                    }
                }],
            "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },
            "encoding": {
                "shape": { "field": "geo", "type": "geojson" },
                "color": {
                    "condition": {
                            "param": "Chooseone",
                            "field":"Forest_cover",
                            "type":"quantitative",
                            "bin": true,
                            "legend": {
                                "legendY": 0,
                                "legendX": 5,
                                "orient": "none",
                                "direction": "horizontal",
                                "labelFontSize": 12.5,
                                "labelExpr": "format(datum.value/100,'0.0p')",
                                "title": "Cover Percentage"
                            }
                        },
                        "value": "lightgrey"
                    },
                    "opacity": {
                        "condition": {
                            "param": "Chooseone",
                            "value": 1
                        },
                        "value": 0.2
                    },
                
                "tooltip": [
                    { "field": "Entity", "type": "nominal", "title": "Country" },
                    { "field": "Forest_cover", "type": "quantitative", "title": "Forest Cover Percentage", "format": ".2f" }
                ]
            }
        }
    ]
}
