{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": {"text":"Global Temperature Change Since 1900","fontSize":20},
    "params": [{
        "name": "Year_selection",
        "value": 1900,
        "bind": {
            "input": "range",
            "min": 1900,
            "max": 2010,
            "step": 10,
            "name": "Year: "
        }
    }],
    "projection": {
        "type": "equirectangular"
    },
    "config": {
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    },
    "layer": [{
            "data": {
                "url": "js/world.json",
                "format": { "type": "topojson", "feature": "world" }
            },
            "transform": [{
                "calculate": "'Data is not available in ' + datum.properties.name",
                "as": "note"
            }],
            "mark": {
                "type": "geoshape",
                "fill": "#ddd",
                "stroke": "white",
                "strokeWidth": 1
            },
            "encoding": { "tooltip": { "field": "note" } }
        },
        {
            "data": {
                "url": "data/temperature/new_temperature_change_19002010.csv"
            },
            "transform": [{
                    "lookup": "country",
                    "from": {
                        "data": {
                            "url": "js/world.json",
                            "format": {
                                "type": "topojson",
                                "feature": "world"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                { "filter": "datum.year == Year_selection" },
                { "filter": "datum.change_temp < 26" }
            ],
            "layer":[
                {
                    "mark": { "type": "geoshape", "stroke": "#fff", "strokeWidth": 0.5 },

                    "encoding": {
                        "shape": { "field": "geo", "type": "geojson" },
                        "color": {
                            "field": "change_temp",
                            "type": "quantitative",
                            "scale": {
                                "domain": [-4, 0, 4],
                                "scheme": "blueorange"
                            },
                            "legend": {
                                "legendY": 0,
                                "legendX": 5,
                                "orient": "none",
                                "direction": "horizontal",
                                "labelFontSize": 12.5,
                                "title": "Average Temperature"
                            }
                        },
                        "tooltip": [
                            { "field": "country", "type": "nominal", "title": "Country" },
                            { "field": "change_temp", "type": "quantitative", "title": "Changed Temperature" },
                            { "field": "year", "type": "quantitative", "title": "Year" }
                        ]
                    }
                },
                {
                    "mark":{
                        "type": "text",
                        "fill":"black",
                        "font":"Segoe Print",
                        "fontWeight":"lighter",
                        "fontSize":20,
                        "text":["The temperatures in 1900","are set as the beginning","which are 0s"],
                        "x":150,
                        "y":250,
                        "align":"center"
                    }
                }
            ]
        }
    ]
}
